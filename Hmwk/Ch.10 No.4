/* numWord function receives pointer to an array and the size of the array
 * as a parameter. The function then loops to find the number of whitespace
 * to determine the amount of words in the character array. Returns number
 * found.
 */
int numWord(char* ch, int max)
{
	//Declare variables
	int count;
	int words = 1;

	//Loop to find whitespace
	for(count=0;count<max;count++)
	{
		//Increment number of words if whitespace is found
		if(ch[count]==' ')
			words++;
	}
	//Return number of words found
	return words;
}

/* numLtr function receives pointer to an array and the size of the array
 * as a parameter. The function then loops to find the number of letters in
 * the character array and returns that number.
 */
int numLtr(char* ch, int max)
{
	//Declare variables
	int count,		//Counter for loop
		ltr = 0;	//Number of letters in character string
	//Loop until null terminator to find number of letters
	for(count=0;ch[count]!='\0';count++)
	{
		//Increment letters if character is alphabetical
		if(isalpha(ch[count]))
			ltr++;
	}
	//Return number of letters found
	return ltr;
}
