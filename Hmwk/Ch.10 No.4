//System Libraries
#include <iostream>
using namespace std;

//Functions Prototypes
int numWord(char*, int);	//Numbers of words in array
int numLtr(char*, int);		//Number of letters	in array

//Main Function
int main()
{
	/****************************************
	 * CONSTANTS:
	 *
	 * SIZE: size of array
	 ****************************************/
	const int SIZE = 1000;

	//Declare Variables
	char str[SIZE];		//INPUT - Character string for user input of size SIZE
	int avgLtr;			//Average letters per word

	//Prompt user to input a C-string
	cout << "Input a C-string to be evaluated: ";
	cin.getline(str, SIZE);

	//Calculate average number of letters per word
	avgLtr = numLtr(str,SIZE)/numWord(str,SIZE);

	//Display number of words and average letters per word
	cout << "There are " << numWord(str,SIZE) << " words in the C-string.\n";
	cout << "There are " <<	avgLtr << " average letters per word";
	cout << " in the C-string";

	//Terminate program
	return 0;
}

