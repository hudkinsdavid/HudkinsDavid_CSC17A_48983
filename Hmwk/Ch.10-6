/* numVwls function receives a pointer to a character array as well as its
 * size and determines the number of vowels in the array.
 */
int numVwls(char* arr, int max)
{
	int i,			//Index for loop
		count = 0;	//Counter for vowels
	//Loop to cycle through array elements
	for(i=0;arr[i]!='\0'; i++)
	{
		if(isalpha(arr[i]))	//Self-explanatory
		{
			switch(arr[i])	//Checks for vowels
			{
			case'A':
			case'a':
			case'E':
			case'e':
			case'I':
			case'i':
			case'O':
			case'o':
			case'U':
			case'u': count++;	//increment for vowels
					 break;
			default: break;
			}
		}
	}
	return count;
}

/* numCsnt function receives a pointer to a character array as well as its
 * size and determines the number of consonants in the array.
 */
int numCsnt(char* arr, int max)
{
	int i,			//Index for loop
		count = 0;	//Counter for consonants
	//Loop to cycle through array elements
	for(i=0;arr[i]!='\0'; i++)
	{
		if(isalpha(arr[i]))	//Self-explanatory
		{
			switch(arr[i])	//Checks for vowels
			{
			case'A':
			case'a':
			case'E':
			case'e':
			case'I':
			case'i':
			case'O':
			case'o':
			case'U':
			case'u': break;
			default: count++;	//increment for consonants
					 break;
			}
		}
	}
	return count;
}
