//System Libraries
#include <iostream>
using namespace std;

//Functions Prototypes
int numVwls(char*, int);
int numCsnt(char*, int);

//Main Function
int main()
{
	/********************************
	 * CONSTANTS
	 * ____________
	 * SIZE: size of array
	 ********************************/
	const int SIZE = 1000;

	//Declare Variables
	char str[SIZE];		//INPUT: Character string of size SIZE
	char choice;		//INPUT: Menu navigator
	int num;			//Holds numbers returned from functions

	//Prompt user to input character string
	cout << "Enter any string of characters: ";
	cin.getline(str,SIZE);

	//Loop to display menu
	do
	{
		cout << "A) Count the number of vowels in the string" << endl;
		cout << "B) Count the number of consonants in the string" << endl;
		cout << "C) Count both the vowels and consonants in the string" << endl;
		cout << "D) Enter another string" << endl;
		cout << "E) Exit the program" << endl;
		//Menu choice
		cin >> choice;
		//Menu navigation operation
		switch(choice)
		{
		case'A':
		case'a': num = numVwls(str,SIZE);	//Determine num of vowels
				 cout << num << " vowels in the string.\n" << endl;
				 break;
		case'B':
		case'b': num = numCsnt(str,SIZE);	//Determine num of consonants
				 cout << num << " consonants in the string.\n" << endl;
				 break;
		case'C':
		case'c': //Determine num of consonants and vowels
				 num = (numVwls(str,SIZE)) + (numCsnt(str,SIZE));
				 cout << num << " vowels and consonants in the string.\n" << endl;
				 break;
		case'D':
		case'd': //Prompt user to input character string
				 cout << "Enter any string of characters: ";
				 cin.get();
				 cin.getline(str,SIZE);
				 break;
		case'E':
		case'e': cout << "Goodbye!";		//Terminate switch statement
				 break;
		default: cout << "Invalid choice.\n" << endl;
		}
	}while(choice != 'E' && choice != 'e');	//While user does not exit
	//Terminate program
	return 0;
}
